@model IEnumerable<BooklyReview.Models.Book>



@{

    ViewBag.Title = "Movies";

    Layout = "~/Views/Shared/_Layout.cshtml";

}



<h2>Movies</h2>

<table class="table table-bordered table-hover">

    <thead>

        <tr>

            <th>Book</th>
            <th>Author</th>
            <th>Genre</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var book in Model)

        {

            <tr>

                <td>@book.Name</td>
                <td>@book.Author</td>
            </tr>

        }

    </tbody>

</table>